{
    "compilerOptions": {
      "jsx": "preserve",
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "@components/*": ["components/*"],
        "@styles/*": ["styles/*"],
        "@pages/*": ["pages/*"],
        "@hooks/*": ["hooks/*"]
    }
    },
    "exclude": [
      "node_modules"
    ],
    "files": [
      "pages/index.tsx"
    ],
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx"
, "next.config.js"    ]
  }